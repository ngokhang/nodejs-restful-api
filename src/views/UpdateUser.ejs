    <div class="wrap-form">
        <form action="/update-user" method="post" class="form"> 
            <fieldset>
                <legend>Update user</legend>
                <div class="d-none">
                    <label for="id">ID: </label>
                    <input type="text" name="userId" value="<%= userInfo.id %> ">
                </div>
                <div>
                    <label for="username">Email:</label>
                    <input type="text" name="email" id="email" value="<%= userInfo.email %> ">
                </div>
                <div>
                    <label for="username">Name</label>
                    <input type="text" name="username" id="username" value="<%= userInfo.username %>">
                </div>
                <div>
                    <label for="city">City</label>
                    <input type="text" name="city" id="city" value="<%= userInfo.city %> ">
                </div>
                <button type="submit">Save</button>
            </fieldset>
        </form>
    </div>
</body>
</html>